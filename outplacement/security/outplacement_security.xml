<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_category_outplacement" model="ir.module.category">
        <field name="name">Outplacement</field>
        <field name="description">Helps you manage your outplacements by tracking them, generating plannings, etc...
        </field>
        <field name="sequence">10</field>
    </record>

    <record id="group_outplacement_user_read" model="res.groups">
        <field name="name">User: Read Only</field>
        <field name="category_id" ref="outplacement.module_category_outplacement"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
    <record id="group_outplacement_user_write" model="res.groups">
        <field name="name">User: Standard</field>
        <field name="category_id" ref="outplacement.module_category_outplacement"/>
        <field name="implied_ids" eval="[(4, ref('outplacement.group_outplacement_user_read'))]"/>
    </record>
    <record id="group_outplacement_admin" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="outplacement.module_category_outplacement"/>
        <field name="implied_ids" eval="[(4, ref('outplacement.group_outplacement_user_write'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
</odoo>
