<odoo>
    <data>
        <record id="outplacement_stage_form_view" model="ir.ui.view">
            <field name="name">Outplacement Stage</field>
            <field name="model">outplacement.stage</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="sequence"/>
                            </group>
                            <group>
                                <field name="fold"/>
                                <field name="template_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="outplacement_stage_tree_view" model="ir.ui.view">
            <field name="name">Outplacement Stage</field>
            <field name="model">outplacement.stage</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="fold"/>
                    <field name="template_id"/>
                </tree>
            </field>
        </record>

        <record id="outplacement_stage_action" model="ir.actions.act_window">
            <field name="name">Outplacement Stage</field>
            <field name="res_model">outplacement.stage</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
                id="menu_outplacement_stage"
                parent="outplacement.outplacement_configuration"
                action="outplacement.outplacement_stage_action"
                name="Stages"
                groups="outplacement.group_outplacement_admin"
                sequence="10"/>

    </data>
</odoo>
