<odoo>
  <data>
    <record id="outplacement_form_view" model="ir.ui.view">
      <field name="name">Outplacement</field>
      <field name="model">outplacement</field>
      <field name="arch" type="xml">
        <form>
          <header>
            <field name="stage_id" widget="statusbar" options="{'clickable': '1', 'fold_field': 'fold'}" />
          </header>
          <sheet>
            <div class="oe_button_box" name="button_box" />
            <field name="image" widget='image' class="oe_avatar" options='{"preview_image":"image_medium"}' />
            <div class="oe_title">
              <label for="name" class="oe_edit_only" />
              <h1>
                <field name="partner_name"  />
                <field name="partner_id" required="True"  class="oe_edit_only"   />
              </h1>
            </div>
            <group col="3">
              <group>
              <label for="street" string="Address"/>
              <div class="o_address_format">
                  <field name="partner_street" placeholder="Street..." class="o_address_street" />
                  <field name="partner_street2" placeholder="Street 2..." class="o_address_street" />
                  <field name="partner_city" placeholder="City" class="o_address_city" />
                  <field name="partner_state_id" class="o_address_state" placeholder="State" options="{&quot;no_open&quot;: True}"  context="{'country_id': country_id, 'zip': partner_zip}"/>
                  <field name="partner_zip" placeholder="ZIP" class="o_address_zip"/>
                  <field name="country_id" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                </div>
              </group>
              <group>
                <field name="partner_phone" />
                <field name="partner_email" />
                <field name="employee_id" />
                <field name="department_id" />
                <field name="meeting_remote" />
              </group>
              <group>
                <field name="name" />
                <field name="booking_ref" />
                <field name="uniq_ref" />
                <field name="date_begin" widget="date"/>
                <field name="date_end" widget="date"/>
              </group>
            </group>
            <notebook />
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers" groups="base.group_user" />
            <field name="activity_ids" widget="mail_activity" />
            <field name="message_ids" widget="mail_thread" />
          </div>
        </form>
      </field>
    </record>
    <record id="outplacement_tree_view" model="ir.ui.view">
      <field name="name">Outplacement</field>
      <field name="model">outplacement</field>
      <field name="arch" type="xml">
        <tree>
          <field name="partner_name" />
          <field name="booking_ref" />
          <field name="employee_id" />
          <field name="department_id" />
          <field name="stage_id" />
        </tree>
      </field>
    </record>
    <record id="outplacement_pivot_view" model="ir.ui.view">
      <field name="name">Outplacement</field>
      <field name="model">outplacement</field>
      <field name="arch" type="xml">
        <pivot display_quantity="True">
          <field name="employee_id" type="row" />
          <field name="stage_id" type="measure" />
        </pivot>
      </field>
    </record>
    <record id="outplacement_kanban_view" model="ir.ui.view">
      <field name="name">Outplacement</field>
      <field name="model">outplacement</field>
      <field name="arch" type="xml">
        <kanban class="o_hr_employee_kanban" default_group_by="stage_id">
          <field name="id" />
          <field name="message_follower_ids" />
          <field name="message_ids" />
          <field name="message_needaction_counter" />
          <field name="partner_name" />
          <field name="my_department" />
          <field name="my_outplacement" />
          <templates>
            <t t-name="kanban-box">
              <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_hr_kanban_record">
                <!-- Medium employee's picture -->
                <div class="o_kanban_image_fill_left d-none d-md-block" t-attf-style="background-image: url(#{kanban_image('hr.jobseeker', 'image_medium', record.id.raw_value)})" role="img" />
                <!-- Employee's picture optimized for mobile -->
                <div class="o_kanban_image d-md-none rounded-circle" t-attf-style="background-image: url(#{kanban_image('hr.jobseeker', 'image_small', record.id.raw_value)})" role="img" />
                <div class="oe_kanban_details">
                  <div class="o_kanban_record_top">
                    <div class="o_kanban_record_headings">
                      <strong class="o_kanban_record_title">
                        <strong><t t-esc="record.partner_name.value"/></strong>
                      </strong>
                      <!--                                        <span t-if="record.job_id.raw_value" class="o_kanban_record_subtitle"><field name="job_id"/></span>-->
                    </div>
                  </div>
                  <!--                                <field name="category_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>-->
                  <!--                                <ul>-->
                  <!--                                    <li t-if="record.work_location.raw_value"><field name="work_location"/></li>-->
                  <!--                                </ul>-->
                  <div class="o_kanban_record_body">
                    <field name="booking_ref"/><br/>
                    <field name="service_start_date"/><br/>
                    <field name="service_end_date"/><br/>
                    <field name="sprakstod"/>
                </div>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>
    <record id="outplacement_calendar_view" model="ir.ui.view">
      <field name="name">Outplacement</field>
      <field name="model">outplacement</field>
      <field name="arch" type="xml">
        <calendar string="Leads Generation" date_start="date_begin" date_stop="date_end" quick_add="False" color="employee_id">
          <field name="name" />
          <field name="employee_id" />
        </calendar>
      </field>
    </record>
    <record id="outplacement_filter_view" model="ir.ui.view">
      <field name="name">Outplacement</field>
      <field name="model">outplacement</field>
      <field name="arch" type="xml">
        <search string="Outplacement">
          <field name="name" />
          <field name="employee_id" />
          <field name="booking_ref" />
          <field name="partner_name" />
          <field name="department_id" />
          <filter name="my_department" string="My Department" domain="[('my_department', '=', True)]"/>
          <filter name="my_outplacement" string="My Outplacement" domain="[('my_outplacement', '=', True)]"/>
          <group expand="0" string="Group By">
            <filter string="Department" name="department" context="{'group_by': 'department_id'}"/>
            <filter string="Employee" name="employee" context="{'group_by': 'employee_id'}"/>
            <filter string="Stage" name="stage" context="{'group_by': 'stage_id'}"/>
          </group>
        </search>
      </field>
    </record>
    <record id="outplacement_action" model="ir.actions.act_window">
      <field name="name">Outplacement</field>
      <field name="res_model">outplacement</field>
      <field name="view_type">form</field>
      <field name="view_mode">kanban,calendar,tree,form,pivot,activity</field>
    </record>
    <menuitem id="menu_outplacement" parent="outplacement.parent_menu_outplacement" action="outplacement.outplacement_action" name="Outplacement" groups="outplacement.group_outplacement_user_read" sequence="5" />
  </data>
</odoo>
