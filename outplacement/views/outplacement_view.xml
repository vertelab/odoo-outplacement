<odoo>
    <data>
        <record id="outplacement_form_view" model="ir.ui.view">
            <field name="name">Outplacement</field>
            <field name="model">outplacement</field>
            <field name="arch" type="xml">
                <form create="false" edit="true" delete="false">
                    <header>
                        <field name="stage_id" widget="statusbar" options="{'clickable': '1', 'fold_field': 'fold'}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box"/>
                        <!-- remove image for now -->
                        <!-- <field name="image" widget='image' class="oe_avatar"
                        options='{"preview_image":"image_medium"}' /> -->
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="partner_name"/>
                                <field name="partner_id" required="True" class="oe_edit_only"
                                       attrs="{'readonly':[('show_2nd_line','=', True)]}"/>
                            </h1>
                        </div>
                        <field name="show_2nd_line" invisible="1"/>
                        <group col="3">
                            <group name="outplacement" string="Outplacement">
                                <field name="partner_social_sec_nr" attrs="{'readonly':[('show_2nd_line','=', True)]}"
                                       groups="base_user_groups_dafa.group_dafa_employees_read"/>
                                <field name="partner_email"/>
                                <field name="partner_mobile"/>
                                <label for="street" string="Address"/>
                                <div class="o_address_format">
                                    <field name="partner_street" placeholder="Street..." class="o_address_street"
                                           attrs="{'readonly':[('show_2nd_line','=', True)]}"/>
                                    <field name="partner_street2" placeholder="Street 2..." class="o_address_street"
                                           attrs="{'readonly':[('show_2nd_line','=', True)]}"/>
                                    <field name="partner_zip" placeholder="ZIP" class="o_address_zip"
                                           style="margin-right: 1em;"
                                           attrs="{'readonly':[('show_2nd_line','=', True)]}"/>
                                    <field name="partner_city" placeholder="City" class="o_address_city"
                                           attrs="{'readonly':[('show_2nd_line','=', True)]}"/>
                                    <field name="partner_state_id" class="o_address_state" placeholder="State"
                                           options="{&quot;no_open&quot;: True}"
                                           context="{'country_id': country_id, 'zip': partner_zip}"
                                           attrs="{'readonly':[('show_2nd_line','=', True)]}"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country"
                                           options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"
                                           attrs="{'readonly':[('show_2nd_line','=', True)]}"/>
                                </div>
                            </group>
                            <group name="service" string="Service">
                                <field name="interruption" readonly="1"/>
                                <field name="meeting_remote"/>
                            </group>
                            <group name="af_data" string="Authority data">
                                <field name="name" string="Outplacement id" readonly="1"/>
                                <field name="jobseeker_category" groups="base.group_no_one"/>
                                <field name="employee_id" options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                                <field name="performing_operation_id" readonly="1"/>
                                <field name="uniq_ref" attrs="{'readonly':[('show_2nd_line','=', True)]}"
                                       groups="base.group_no_one"/>
                                <field name="booking_ref" attrs="{'readonly':[('show_2nd_line','=', True)]}"
                                       groups="base.group_no_one"/>
                            </group>
                        </group>
                        <notebook/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="outplacement_tree_view" model="ir.ui.view">
            <field name="name">Outplacement</field>
            <field name="model">outplacement</field>
            <field name="arch" type="xml">
                <tree create="false" edit="false" delete="false">
                    <field name="name"/>
                    <field name="partner_name"/>
                    <field name="booking_ref"/>
                    <field name="employee_id"/>
                    <field name="performing_operation_id"/>
                    <field name="stage_id"/>
                </tree>
            </field>
        </record>
        <!-- removed for now, leaving code in case we need it later -->
        <!-- <record id="outplacement_pivot_view" model="ir.ui.view">
          <field name="name">Outplacement</field>
          <field name="model">outplacement</field>
          <field name="arch" type="xml">
            <pivot display_quantity="True">
              <field name="employee_id" type="row" />
              <field name="stage_id" type="measure" />
            </pivot>
          </field>
        </record> -->
        <record id="outplacement_kanban_view" model="ir.ui.view">
            <field name="name">Outplacement</field>
            <field name="model">outplacement</field>
            <field name="arch" type="xml">
                <kanban class="o_hr_employee_kanban" default_group_by="employee_id" create="false" edit="false"
                        delete="false">
                    <field name="id"/>
                    <field name="message_needaction_counter"/>
                    <field name="partner_name"/>
                    <field name="my_performing_operation"/>
                    <field name="my_outplacement"/>
                    <field name="name"/>
                    <field name="performing_operation_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_hr_kanban_record">
                                <!-- removed images for now -->
                                <!-- Medium employee's picture -->
                                <!-- <div class="o_kanban_image_fill_left d-none d-md-block"
                                t-attf-style="background-image: url(#{kanban_image('hr.jobseeker', 'image_medium',
                                record.id.raw_value)})" role="img" /> -->
                                <!-- Employee's picture optimized for mobile -->
                                <!-- <div class="o_kanban_image d-md-none rounded-circle"
                                t-attf-style="background-image: url(#{kanban_image('hr.jobseeker', 'image_small',
                                record.id.raw_value)})" role="img" /> -->
                                <div class="oe_kanban_details">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <strong>
                                                    <t t-esc="record.partner_name.value"/>
                                                </strong>
                                            </strong>
                                            <span class="o_kanban_record_subtitle">
                                                <field name="name"/>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <b>Performing Operation:</b>
                                        <field name="performing_operation_id"/>
                                        <br/>
                                        <b>Language:</b>
                                        <field name="sprakstod"/>
                                        <br/>
                                        <b>Start:</b>
                                        <field name="service_start_date" options="{'format': 'DD-MM-YYYY'}"/>
                                        <br/>
                                        <b>End:</b>
                                        <field name="service_end_date" options="{'format': 'DD-MM-YYYY'}"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- removed for now, leaving code in case we need it later -->
        <!-- <record id="outplacement_calendar_view" model="ir.ui.view">
          <field name="name">Outplacement</field>
          <field name="model">outplacement</field>
          <field name="arch" type="xml">
            <calendar string="Leads Generation" date_start="service_start_date"
            date_stop="service_end_date" quick_add="False" color="employee_id">
              <field name="name" />
              <field name="employee_id" />
            </calendar>
          </field>
        </record> -->
        <record id="outplacement_filter_view" model="ir.ui.view">
            <field name="name">Outplacement</field>
            <field name="model">outplacement</field>
            <field name="arch" type="xml">
                <search string="Outplacement">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="booking_ref"/>
                    <field name="partner_name"/>
                    <field name="performing_operation_id"/>
                    <filter name="my_performing_operation" string="My Performing Operation"
                            domain="[('my_performing_operation', '=', True)]"/>
                    <filter name="my_outplacement" string="My Outplacement" domain="[('my_outplacement', '=', True)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Performing Operation" name="performing_operation"
                                context="{'group_by': 'performing_operation_id'}"/>
                        <filter string="Employee" name="employee" context="{'group_by': 'employee_id'}"/>
                        <filter string="Stage" name="stage" context="{'group_by': 'stage_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="outplacement_action" model="ir.actions.act_window">
            <field name="name">Outplacement</field>
            <field name="res_model">outplacement</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>
        <menuitem id="menu_outplacement" parent="parent_menu_outplacement" action="outplacement_action"
                  name="Outplacement" groups="group_outplacement_user_read" sequence="5"/>
        <record id="performing_operation_form" model="ir.ui.view">
            <field name="name">performing.operation.form</field>
            <field name="model">performing.operation</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="ka_nr"/>
                        </group>
                        <field name="partner_ids" mode="tree">
                            <tree>
                                <field name="street"/>
                                <field name="city"/>
                                <field name="zip"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="performing_operation_tree" model="ir.ui.view">
            <field name="name">performing.operation.tree</field>
            <field name="model">performing.operation</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="ka_nr"/>
                </tree>
            </field>
        </record>
        <record id="action_performing_operation" model="ir.actions.act_window">
            <field name="name">Performing Operation</field>
            <field name="res_model">performing.operation</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="menu_performing_operation" parent="parent_menu_outplacement" action="action_performing_operation"
                  name="Performing Operations" groups="outplacement.group_outplacement_user_read" sequence="20"/>
    </data>
</odoo>
