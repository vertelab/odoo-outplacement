<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_res_partner_form" model="ir.ui.view">
        <field name="name">res.partner.outplacement.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="vat" position="after">
                <field name="performing_operation_id"/>
                <field name="jobseeker_operation_id"/>
            </field>
            <field name="child_ids" position="before">
                <field name="performing_operation_ids" mode="tree" attrs="{'invisible': [('company_id','=', False)]}}">
                    <tree>
                        <field name="name"/>
                        <field name="ka_nr"/>
                    </tree>
                </field>
            </field>
        </field>
    </record>
</odoo>