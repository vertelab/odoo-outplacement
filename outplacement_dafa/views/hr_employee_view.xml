<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_access_right_hr_form" model="ir.ui.view">
        <field name="name">hr.employee.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="auth_user_rights_wizard.view_access_right_hr_form"/>
        <field name="arch" type="xml">
            <field name="user_groups" position="after">
                <field name="performing_operation_ids" widget="many2many_tags"/>
            </field>
        </field>
    </record>
    <record id="view_employee_tree" model="ir.ui.view">
        <field name="name">hr.employee.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_tree"/>
        <field name="arch" type="xml">
            <xpath expr="." position="inside">
                <field name="performing_operation_ids" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>
    <!-- Rolled back. Should be removed unless we restore it. -->
    <record id="contacts.action_contacts" model="ir.actions.act_window">
        <field name="domain">[]</field>
    </record>
    <record id="contacts.menu_contacts" model="ir.ui.menu">
        <field name="groups_id" eval="[(6, 0, [ref('base_user_groups_dafa.1_line_support')])]" />
    </record>
    <!-- Fix for access rights issue from web_one2many_kanban. Doesn't seem to affect anything. -->
    <record id="hr_kanban_view_employees_kanban" model="ir.ui.view">
        <field name="name">hr.employee.kanban.web_one2many_kanban.fix</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.hr_kanban_view_employees"/>
        <field name="arch" type="xml">
            <field name="message_follower_ids" position="replace"/>
            <field name="message_ids" position="replace"/>
            <field name="message_needaction_counter" position="replace"/>
        </field>
    </record>
</odoo>
