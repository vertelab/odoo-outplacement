<odoo>
    <record id="view_outplacement_form" model="ir.ui.view">
        <field name="name">outplacement.view.form.inherit.final.report</field>
        <field name="model">outplacement</field>
        <field name="inherit_id" ref="outplacement.outplacement_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <field name="interrupted_early" invisible="1"/>
                <page string="Final report" name="final_report" sequence="90">
                    <h2 attrs="{'invisible': [('interruption', '=', False)]}">
                        Outplacement interrupted
                        <span attrs="{'invisible': [('interrupted_early', '=', False)]}"> <!-- if interrupted before end date -->
                            before day 16, no final report needs to be sent
                        </span>
                        <span attrs="{'invisible': ['|',('interrupted_early', '=', True),('interruption','=',False)]}"> <!-- if interrupted after end date -->
                            send final report with all available information
                        </span>
                    </h2>
                    <group>
                        <group>
                            <field name="fr_report_date" autocomplete="off"/>
                            <field name="fr_send_date" groups="base.group_no_one" autocomplete="off"/>
                            <field name="fr_report_approved_date" autocomplete="off"/>
                            <field name="main_goal_id" domain="[('id','=',-1)]" context="{'main_goal': 1}"/>
                            <field name="alternative_goal_id" domain="[('id','=',-1)]" context="{'main_goal': 0}"/>
                        </group>
                        <group>
                        </group>
                    </group>
                    <h2>Study visit</h2>
                    <group>
                        <field name="study_visit_ids" mode="tree" nolabel="1">
                            <tree editable="bottom" string="Study visits" default_order="name">
                                <field name="visit_selection"/>
                                <field name="name" autocomplete="off"/>
                                <field name="visit_type" autocomplete="off"/>
                                <field name="reasoning"/>
                            </tree>
                        </field>
                    </group>
                    <label for="complementing_information"
                           string="Is there complementing information for potential needs, limitations or conditions to seek education or employment that need to be communicated with Arbetsförmedlingen?"/>
                    <group>
                        <group>
                            <field name="complementing_information"/>
                        </group>
                        <group></group>
                    </group>
                </page>
            </xpath>
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive"
                        attrs="{'invisible': [('fr_report_approved_date', '=', False)]}">
                    <field name="active" widget="boolean_button" options='{"terminology": "active"}'/>
                </button>
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="action_final_report_send" string="Send Final Report by Email"
                        type="object" class="btn-primary" groups="base.group_no_one"/>
            </xpath>
        </field>
    </record>

    <record id="view_outplacement_kanban" model="ir.ui.view">
        <field name="name">outplacement.view.kanban.inherit.final.report</field>
        <field name="model">outplacement</field>
        <field name="inherit_id" ref="outplacement.outplacement_kanban_view"/>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="fr_rejected"/>
                <field name="time_to_submit_fr_1_4"/>
                <field name="time_to_submit_fr_5_20"/>
                <field name="time_to_submit_fr_21"/>
            </field>
            <xpath expr="//div[hasclass('o_kanban_record_headings')]/strong[hasclass('o_kanban_record_title')]"
                   position="before">
                <div>
                    <t t-if="record.fr_rejected.raw_value" t-set="red">oe_kanban_text_red</t>
                    <t t-if="record.fr_rejected.raw_value">
                        <span t-attf-class="#{red || ''}">
                            <strong>Final report has been rejected</strong>
                        </span>
                    </t>
                </div>
            </xpath>
            <xpath expr="//div[hasclass('o_kanban_record_body')]" position="inside">
                 <t t-if="record.time_to_submit_fr_1_4.raw_value">
                    <br/><span style="color:green;font-size:12px">Please submit Final Report</span>
                 </t>
                 <t t-if="record.time_to_submit_fr_5_20.raw_value">
                    <br/><span style="color:red;font-size:12px">Please submit Final Report</span>
                 </t>
                 <t t-if="record.time_to_submit_fr_21.raw_value">
                    <br/><span style="color:red;font-size:12px">It is too late to submit a Final Report</span>
                 </t>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_outplacement_goal_form">
        <field name="name">outplacement.goal.form</field>
        <field name="model">outplacement.goal</field>
        <field name="arch" type="xml">
            <form>
                <span invisible="not context.get('main_goal')">description main goal</span>
                <span invisible="context.get('main_goal')">description alternative goal</span>
                descriptive text for goals
                <group>
                    <field name="field_of_work_id" domain="[('parent_id','=',False)]"
                           options="{'no_create_edit':True, 'no_open': True}"/>
                    <field name="jobs_ids" invisible="1"/>
                    <field name="job_id"
                           domain="['&amp;', ('parent_id','child_of',field_of_work_id), ('id','in',jobs_ids)]"
                           options="{'no_create_edit':True, 'no_open': True}"/>
                    <field name="job_description"/>
                </group>
                <div>
                    <b>
                        Motivate choice of
                        <span invisible="not context.get('main_goal')">main goal</span>
                        <span invisible="context.get('main_goal')">alternative goal</span>
                    </b>
                </div>
                <group>
                    <field name="matches_interest"/>
                    <field name="matches_ability"/>
                    <field name="market_demand"/>
                    <field name="complementing_education"/>
                    <field name="complementing_experience"/>
                    <field name="other_motivation"/>
                    <field name="free_text" attrs="{'invisible': [('other_motivation', '=', False)]}"/>
                    <field name="step_ids" mode="tree">
                        <tree>
                            <field name="step_type"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </tree>
                    </field>
                </group>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_outplacement_goal_step_form">
        <field name="name">outplacement.goal.step.form</field>
        <field name="model">outplacement.goal.step</field>
        <field name="arch" type="xml">
            <form>
                descriptive text for steps
                <group>
                    <field name="step_type"/>
                    <field name="complementing_effort_type"
                           attrs="{'invisible': [('step_type', '!=', 'Lämpliga kompletterande insatser')]}"/>
                    <field name="complementing_effort_description"
                           attrs="{'invisible': [('complementing_effort_type', '!=', 'Annat')]}"/>
                    <field name="step_name" string="Describe other step"
                           attrs="{'invisible': [('step_type', '!=', 'Annat')]}"/>
                    <field name="step_name"
                           attrs="{'invisible': [('step_type', '!=', 'Studera reguljär utbildning')]}"/>
                    <field name="education_level_id"
                           attrs="{'invisible': [('step_type', '!=', 'Studera reguljär utbildning')]}"/>
                    <field name="start_date" autocomplete="off"/>
                    <field name="end_date" autocomplete="off"/>
                </group>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_outplacement_study_visit_form">
        <field name="name">outplacement.study_visit.form</field>
        <field name="model">outplacement.study_visit</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="visit_selection"/>
                    <label for="name" string="Education organizer"
                           attrs="{'invisible':[('visit_selection','=','education')]}"/>
                    <label for="name" string="Workplace" attrs="{'invisible':[('visit_selection','!=','education')]}"/>
                    <field name="name" nolabel="1"/>
                    <label for="visit_type" string="Field of education"
                           attrs="{'invisible':[('visit_selection','=','education')]}"/>
                    <label for="visit_type" string="Field of work"
                           attrs="{'invisible':[('visit_selection','!=','education')]}"/>
                    <field name="visit_type" nolabel="1"/>
                    <field name="reasoning"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_outplacement_goal_tree" model="ir.ui.view">
        <field name="name">outplacement_goal</field>
        <field name="model">outplacement.goal</field>
        <field name="arch" type="xml">
            <tree>
                <field name="field_of_work_id"/>
                <field name="job_id"/>
                <field name="job_description"/>
                <field name="matches_interest"/>
                <field name="matches_ability"/>
                <field name="market_demand"/>
                <field name="complementing_education"/>
                <field name="complementing_experience"/>
                <field name="other_motivation"/>
                <field name="free_text"/>
                <field name="step_ids"/>
            </tree>
        </field>
    </record>

    <record id="view_outplacement_goal_step_tree" model="ir.ui.view">
        <field name="name">outplacement_goal_step</field>
        <field name="model">outplacement.goal.step</field>
        <field name="arch" type="xml">
            <tree>
                <field name="step_type"/>
                <field name="complementing_effort_type"/>
                <field name="complementing_effort_description"/>
                <field name="step_name"/>
                <field name="education_level_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </tree>
        </field>
    </record>

    <record id="outplacement_goal_action" model="ir.actions.act_window">
        <field name="name">Final report goals</field>
        <field name="res_model">outplacement.goal</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_outplacement_goal_tree"/>
    </record>

    <record id="outplacement_goal_step_action" model="ir.actions.act_window">
        <field name="name">Final report goal steps</field>
        <field name="res_model">outplacement.goal.step</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_outplacement_goal_step_tree"/>
    </record>

    <record model="ir.actions.act_window" id="outplacement_study_visit_action_window">
        <field name="name">Outplacement study visit</field>
        <field name="res_model">outplacement.study_visit</field>
        <field name="view_mode">form</field>
    </record>


    <record id="outplacement_goal_action_form_view" model="ir.actions.act_window.view">
        <field name="act_window_id" ref="outplacement_goal_action"/>
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_outplacement_goal_form"/>
    </record>

    <record id="outplacement_goal_action_tree_view" model="ir.actions.act_window.view">
        <field name="act_window_id" ref="outplacement_goal_action"/>
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_outplacement_goal_tree"/>
    </record>

    <record id="outplacement_goal_step_action_form_view" model="ir.actions.act_window.view">
        <field name="act_window_id" ref="outplacement_goal_step_action"/>
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_outplacement_goal_step_form"/>
    </record>

    <record id="outplacement_goal_step_action_tree_view" model="ir.actions.act_window.view">
        <field name="act_window_id" ref="outplacement_goal_step_action"/>
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_outplacement_goal_step_tree"/>
    </record>

    <menuitem id="goal_configuration" parent="outplacement.outplacement_configuration" name="Goals"
              groups="outplacement.group_outplacement_admin"
              sequence="90" action="outplacement_goal_action"/>
    <menuitem id="goal_step_configuration" parent="outplacement.outplacement_configuration" name="Steps"
              groups="outplacement.group_outplacement_admin"
              sequence="91" action="outplacement_goal_step_action"/>


</odoo>
