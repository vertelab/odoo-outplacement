<odoo>
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">outplacement.view.form.inherit.final.report</field>
        <field name="model">outplacement</field> 
        <field name="inherit_id" ref="outplacement.outplacement_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Final report" name="final_report" sequence="90">
                    <group>
                        <group>
                            <field name="main_goal_id" domain="[('id','=',-1)]"/>
                            <field name="alternative_goal_id" domain="[('id','=',-1)]"/>
                            <field name="fr_report_date" autocomplete="off"/>
                            <field name="fr_send_date" groups="base.group_no_one" autocomplete="off"/>
                        </group>
                      <!-- add complementing information here -->
                        <group>
                        </group>
                    </group>
                    <h2>Study visit</h2>
                    <group>
                        <field name="study_visit_ids" mode="tree" nolabel="1">
                            <tree editable="bottom" string="Study visits" default_order="name">
                                <field name="visit_selection"/>
                                <field name="name" autocomplete="off"/>
                                <field name="visit_type" autocomplete="off"/>
                                <field name="reasoning"/>
                            </tree>
                        </field>
                        Is there completing information for potential needs, limitations or conditions to seek education or employment that need to be communicated with Arbetsförmedlingen?
                        <field name="completing_information"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_outplacement_goal_form">
        <field name="name">outplacement.goal.form</field>
        <field name="model">outplacement.goal</field>
        <field name="arch" type="xml">
            <form>
                descriptive text for goals
                <group>
                    <field name="field_of_work_id" domain="[('parent_id','=',False)]" options="{'no_create_edit':True}"/>
                    <field name="jobs_ids" invisible="1"/>
                    <field name="job_id" domain="['&amp;', ('parent_id','child_of',field_of_work_id), ('id','in',jobs_ids)]" options="{'no_create_edit':True}"/>
                    <field name="job_description"/>
                    <field name="matches_interest"/>
                    <field name="matches_ability"/>
                    <field name="market_demand"/>
                    <field name="complementing_education"/>
                    <field name="complementing_experience"/>
                    <field name="other_motivation"/>
                    <field name="free_text" attrs="{'invisible': [('other_motivation', '=', False)]}"/>
                    <field name="step_ids" mode="tree">
                        <tree>
                            <field name="step_type"/>
                            <field name="start_date" />
                            <field name="end_date" />
                        </tree>
                    </field>
                </group>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_outplacement_goal_step_form">
        <field name="name">outplacement.goal.step.form</field>
        <field name="model">outplacement.goal.step</field>
        <field name="arch" type="xml">
            <form>
                descriptive text for steps
                <group>
                    <field name="step_type"/>
                    <field name="complementing_effort_type" attrs="{'invisible': [('step_type', '!=', 'Lämpliga kompletterande insatser')]}"/>
                    <field name="complementing_effort_description" attrs="{'invisible': [('complementing_effort_type', '!=', 'Annat')]}"/>
                    <field name="step_name" attrs="{'invisible': [('step_type', '=', 'Lämpliga kompletterande insatser')]}"/>
                    <field name="education_level_id" attrs="{'invisible': [('step_type', '!=', 'Studera reguljär utbildning')]}"/>
                    <field name="start_date" autocomplete="off"/>
                    <field name="end_date" autocomplete="off"/>
                </group>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_outplacement_study_visit_form">
        <field name="name">outplacement.study_visit.form</field>
        <field name="model">outplacement.study_visit</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="visit_selection"/>
                    <label for="name" string="Education organizer" attrs="{'invisible':[('visit_selection','=','education')]}"/>
                    <label for="name" string="Workplace" attrs="{'invisible':[('visit_selection','!=','education')]}"/>
                    <field name="name" nolabel="1"/>
                    <label for="visit_type" string="Field of education" attrs="{'invisible':[('visit_selection','=','education')]}"/>
                    <label for="visit_type" string="Field of work" attrs="{'invisible':[('visit_selection','!=','education')]}"/>
                    <field name="visit_type" nolabel="1"/>
                    <field name="reasoning"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_outplacement_goal_tree" model="ir.ui.view">
        <field name="name">outplacement_goal</field>
        <field name="model">outplacement.goal</field>
        <field name="arch" type="xml">
                <tree>
                    <field name="field_of_work_id"/>
                    <field name="job_id" />
                    <field name="job_description"/>
                    <field name="matches_interest"/>
                    <field name="matches_ability"/>
                    <field name="market_demand"/>
                    <field name="complementing_education"/>
                    <field name="complementing_experience"/>
                    <field name="other_motivation"/>
                    <field name="free_text" />
                    <field name="step_ids" />
                </tree>
        </field>
    </record>

    <record id="view_outplacement_goal_step_tree" model="ir.ui.view">
        <field name="name">outplacement_goal_step</field>
        <field name="model">outplacement.goal.step</field>
        <field name="arch" type="xml">
            <tree>
                <field name="step_type"/>
                <field name="complementing_effort_type" />
                <field name="complementing_effort_description" />
                <field name="step_name" />
                <field name="education_level_id" />
                <field name="start_date" />
                <field name="end_date" />
            </tree>
        </field>
    </record>

    <record id="outplacement_goal_action" model="ir.actions.act_window">
        <field name="name">Final report goals</field>
        <field name="res_model">outplacement.goal</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_outplacement_goal_tree"/>
    </record>

    <record id="outplacement_goal_step_action" model="ir.actions.act_window">
        <field name="name">Final report goal steps</field>
        <field name="res_model">outplacement.goal.step</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_outplacement_goal_step_tree"/>
    </record>

    <record model="ir.actions.act_window" id="outplacement_study_visit_action_window">
        <field name="name">Outplacement study visit</field>
        <field name="res_model">outplacement.study_visit</field>
        <field name="view_mode">form</field>
    </record>


    <record id="outplacement_goal_action_form_view" model="ir.actions.act_window.view">
        <field name="act_window_id" ref="outplacement_goal_action"/>
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_outplacement_goal_form"/>
    </record>

    <record id="outplacement_goal_action_tree_view" model="ir.actions.act_window.view">
        <field name="act_window_id" ref="outplacement_goal_action"/>
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_outplacement_goal_tree"/>
    </record>

    <record id="outplacement_goal_step_action_form_view" model="ir.actions.act_window.view">
        <field name="act_window_id" ref="outplacement_goal_step_action"/>
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_outplacement_goal_step_form"/>
    </record>

    <record id="outplacement_goal_step_action_tree_view" model="ir.actions.act_window.view">
        <field name="act_window_id" ref="outplacement_goal_step_action"/>
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_outplacement_goal_step_tree"/>
    </record>

    <menuitem id="goal_configuration" parent="outplacement.outplacement_configuration" name="Goals"
              groups="outplacement.group_outplacement_admin"
              sequence="90" action="outplacement_goal_action"/>
    <menuitem id="goal_step_configuration" parent="outplacement.outplacement_configuration" name="Steps"
              groups="outplacement.group_outplacement_admin"
              sequence="91" action="outplacement_goal_step_action"/>


</odoo>
