<?xml version="1.0" encoding="utf-8"?>

<data>
    <record model="ir.ui.view" id="ipf_final_report_view_list">
        <field name="name">IPF Final Report Client Config View List</field>
        <field name="model">ipf.final_report.client.config</field>
        <field name="arch" type="xml">
            <tree>
                <field name="url"/>
                <field name="environment"/>
                <field name="client_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="ipf_final_report_view_form">
        <field name="name">IPF Final Report Client Config View Form</field>
        <field name="model">ipf.final_report.client.config</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button class="btn-primary" type="object"
                            string="POST" name="test_post_report"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="url"/>
                            <field name="environment"/>
                            <field name="client_id"/>
                            <field name="client_secret" password="True"/>
                        </group>
                        <group string="Requests" colspan="4">
                            <field name="request_history_ids" nolabel="1"
                                   colspan="4">
                                <tree>
                                    <field name="url"/>
                                    <field name="method"/>
                                    <field name="response_code"/>
                                    <field name="message"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="url"/>
                                        <field name="method"/>
                                        <field name="payload"/>
                                        <field name="request_headers"/>
                                        <field name="params"/>
                                        <field name="response_code"/>
                                        <field name="response_headers"/>
                                        <field name="message"/>
                                    </group>
                                </form>
                            </field>
                        </group>
                    </group>
                </sheet>

            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="ipf_final_report_action_window">
        <field name="name">IPF Final Report Client Config</field>
        <field name="res_model">ipf.final_report.client.config</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_ipf_final_report"
              name="IPF Final Report"
              action="ipf_final_report_action_window"
              parent="api_ipf.api_client_config_parent_menu"
              sequence="5"/>

    <record id="view_outplacement_kanban_for_interruption" model="ir.ui.view">
        <field name="name">outplacement.view.kanban.inherit.for.interruption</field>
        <field name="model">outplacement</field>
        <field name="inherit_id" ref="outplacement.outplacement_kanban_view"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="interruption"/>
            </field>
            <xpath expr="//span[hasclass('o_kanban_record_subtitle')]"
                   position="inside">
                <span style="text-align:right">
                    <t t-if="record.interruption.raw_value">
                        <span style="color:red">Cancelled by AF</span>
                    </t>
                </span>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="ipf_final_report_client_config_request_history">
        <field name="name">IPF Final Report Client Config Request History View List</field>
        <field name="model">ipf.final_report.request.history</field>
        <field name="arch" type="xml">
            <tree>
                <field name="url"/>
                <field name="method"/>
                <field name="payload"/>
                <field name="request_headers"/>
                <field name="response_headers"/>
                <field name="response_code"/>
                <field name="message"/>
            </tree>
        </field>
    </record>
     <record model="ir.ui.view" id="ipf_final_report_client_config_request_history_form">
        <field name="name">IPF Final Report Client Config Request History View Form</field>
        <field name="model">ipf.final_report.request.history</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="config_id"/>
                    <field name="url"/>
                    <field name="method"/>
                    <field name="payload"/>
                    <field name="request_headers"/>
                    <field name="response_headers"/>
                    <field name="params"/>
                    <field name="response_code"/>
                    <field name="message"/>
                </group>
            </form>
        </field>
    </record>
     <record model="ir.ui.view" id="ipf_final_report_client_config_request_history_search">
        <field name="name">IPF Final Report Client Config Request History View Search</field>
        <field name="model">ipf.final_report.request.history</field>
        <field name="arch" type="xml">
            <search>
               <field name="url"/>
                <separator/>
                <filter name="create_date" string="Create Date" date="create_date" groups="base.group_no_one"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Response Code" name="response_code" context="{'group_by': 'response_code'}"/>
                    <filter string="Created On" name="create_date" context="{'group_by': 'create_date'}"
                            groups="base.group_no_one"/>
                </group>
            </search>
        </field>
    </record>
    <record model="ir.actions.act_window" id="ipf_final_report_client_config_request_history_action_window">
        <field name="name">IPF Final Report Client Config Request History</field>
        <field name="res_model">ipf.final_report.request.history</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_ipf_final_report_client_config_request_history"
              name="IPF Final"
              action="ipf_final_report_client_config_request_history_action_window"
              parent="api_ipf.client_config_request_history_parent_menu"
              sequence="5"/>
</data>
