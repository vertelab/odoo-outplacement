<odoo>
    <data>
        <record forcecreate="True" id="ir_cron_order_invoice" model="ir.cron">
            <field name="name">Check for Outplacement Invoices</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="state">code</field>
            <field name="code">model.cron_outplacement_invoice()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="nextcall" eval="datetime.now()"/>
            <field name="interval_number">3</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/>
        </record>
    </data>
</odoo>
