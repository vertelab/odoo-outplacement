<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="invoice_tree_inherited" model="ir.ui.view">
        <field name="name">account.invoice.tree</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_tree"/>
        <field name="arch" type="xml">
            <field name="number" position="replace">
                <field name="raindance_ref" string="Number"/>
            </field>
        </field>
    </record>

    <record id="invoice_form_inherited" model="ir.ui.view">
        <field name="name">account.invoice.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <h1 class="mt0" position="replace">
                <h1 class="mt0">
                    <div>
                        <label for="raindance_ref" string="SELF INVOICE"/>
                        <br/>
                        <field name="raindance_ref" string="Number" readonly="1"/>
                    </div>
                </h1>
            </h1>
            <xpath expr="//group" position="replace">
                <group>
                    <group>
                    </group>
                    <group>
                        <field name="date_invoice" options="{'datepicker': {'warn_future': true}}"/>
                        <field name="date"/>
                        <field name="date_due"
                               attrs="{'readonly': ['|',('payment_term_id','!=',False),
                                ('state', 'in', ['open', 'in_payment', 'paid'])]}"
                               force_save="1"/>
                        <field name="payment_term_id"/>
                        <field name="move_name" invisible="1"/>
                    </group>
                </group>
                <group>
                    <group string="Seller">
                        <field name="company_id" readonly="1"/>
                        <label for="street" string="Address"/>
                        <div class="o_address_format">
                            <div class="oe_edit_only"/>
                            <field name="company_partner_street" readonly="1" class="o_address_street"/>
                            <field name="company_partner_city" readonly="1" class="o_address_city"/>
                            <field name="company_partner_zip" readonly="1" class="o_address_zip"/>
                            <field name="company_partner_country_id" readonly="1" class="o_address_country"/>
                        </div>
                        <field name="company_vat" readonly="1" string="Tax ID"/>
                        <field name="company_company_registry" readonly="1" string="Company Registry"/>
                    </group>
                    <group string="Buyer">
                        <field string="Customer" name="partner_id" widget="res_partner_many2one"
                               context="{'search_default_customer':1, 'default_is_company': True}"
                               options="{&quot;always_reload&quot;: True, &quot;no_quick_create&quot;: True}"
                               domain="[('customer', '=', True)]" required="1"/>
                        <field name="partner_vat"/>
                        <field name="partner_company_registry"/>
                    </group>
                </group>
            </xpath>
            <field name="fiscal_position_id" position="replace"/>
            <field name="incoterm_id" position="replace">
                <field name="contract_nr"/>
            </field>
        </field>
    </record>
</odoo>
