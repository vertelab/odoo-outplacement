<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <!--
        @param {mail.systray.MessagingMenu} widget
    -->

    <t t-name="mail.systray.BookingActivityMenu.Previews">
        <t t-if="_.isEmpty(activities)">
            <div class="dropdown-item-text text-center o_no_activity">
                <span>No bookings planned.</span>
            </div>
        </t>
        <t t-foreach="activities" t-as="activity">
            <div class="o_mail_preview" t-att-data-res_model="activity.model" t-att-data-model_name="activity.name"
                 data-filter='my'>
                <div class="o_mail_preview_image o_mail_preview_app">
                    <img t-att-src="activity.icon" alt="Activity"/>
                </div>
                <div class="o_preview_info">
                    <div class="o_preview_title">
                        <span class="o_preview_name">
                            <t t-esc="activity.name"/>
                        </span>
                        <div t-if="activity.actions" class="o_mail_activity_action_buttons">
                            <t t-foreach="activity.actions" t-as="action">
                                <button type="button"
                                        t-att-title="action.name"
                                        t-att-class="'o_mail_activity_action btn btn-link fa ' + action.icon"
                                        t-att-data-action_xmlid="action.action_xmlid"
                                        t-att-data-res_model="activity.model"
                                        t-att-data-model_name="activity.name">
                                </button>
                            </t>
                        </div>
                    </div>
                    <div t-if="activity and activity.type == 'activity'">
                        <button t-if="activity.order_received_count" type="button"
                                class="btn btn-link o_activity_filter_button mr16" t-att-data-res_model="activity.model"
                                t-att-data-model_name="activity.name" data-filter='order_received'>
                            <t t-esc="activity.order_received_count"/>
                            Order received </button>
                        <span t-if="!activity.order_received_count" class="o_no_activity float-right">0 Order received</span>

                         <button t-if="activity.no_available_interpreter_count" type="button"
                                class="btn btn-link o_activity_filter_button mr16" t-att-data-res_model="activity.model"
                                t-att-data-model_name="activity.name" data-filter='no_available_interpreter'>
                            <t t-esc="activity.no_available_interpreter_count"/>
                            No available interpreter </button>
                        <span t-if="!activity.no_available_interpreter_count" class="o_no_activity float-right">0 No available interpreter</span>

                        <button t-if="activity.order_in_process_count" type="button"
                                class="btn btn-link o_activity_filter_button mr16" t-att-data-res_model="activity.model"
                                t-att-data-model_name="activity.name" data-filter='order_in_process'>
                            <t t-esc="activity.order_in_process_count"/>
                            Order in Process </button>
                        <span t-if="!activity.order_in_process_count" class="o_no_activity float-right">0 Order in Process</span>

                        <button t-if="activity.interpreter_booked_count" type="button"
                                class="btn btn-link o_activity_filter_button mr16" t-att-data-res_model="activity.model"
                                t-att-data-model_name="activity.name" data-filter='interpreter_booked'>
                            <t t-esc="activity.interpreter_booked_count"/>
                            Interpreter Booked </button>
                        <span t-if="!activity.interpreter_booked_count" class="o_no_activity float-right">0 Interpreter Booked</span>

                        <button t-if="activity.cancelled_by_interpreter_count" type="button"
                                class="btn btn-link o_activity_filter_button mr16" t-att-data-res_model="activity.model"
                                t-att-data-model_name="activity.name" data-filter='cancelled_by_interpreter'>
                            <t t-esc="activity.cancelled_by_interpreter_count"/>
                            Cancelled By Interpreter </button>
                        <span t-if="!activity.cancelled_by_interpreter_count" class="o_no_activity float-right">
                            0 Cancelled By Interpreter</span>

                        <button t-if="activity.cancelled_by_af_count" type="button"
                                class="btn btn-link o_activity_filter_button mr16" t-att-data-res_model="activity.model"
                                t-att-data-model_name="activity.name" data-filter='cancelled_by_af'>
                            <t t-esc="activity.cancelled_by_af_count"/>
                            Cancelled by AF </button>
                        <span t-if="!activity.cancelled_by_af_count" class="o_no_activity float-right">0 Cancelled by AF</span>
                    </div>
                </div>
            </div>
        </t>
    </t>

    <t t-name="Bookings.ActivityMenu">
        <li class="o_mail_systray_item" role="menuitem">
            <a class="dropdown-toggle o-no-caret" data-toggle="dropdown" data-display="static" aria-expanded="false"
               title="Booking Activities" href="#" role="button">
                <i class="fa fa-address-book-o" role="img" aria-label="Booking Activities"/>
                <span class="o_notification_counter badge badge-pill"/>
            </a>
            <div class="o_mail_systray_dropdown dropdown-menu dropdown-menu-right" role="menu" style="width:600px">
                <div class="o_mail_systray_dropdown_items"/>
            </div>
        </li>
    </t>

</templates>
