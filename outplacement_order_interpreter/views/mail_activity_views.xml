<?xml version="1.0"?>
<odoo>

    <record id="inerpreter" model="ir.ui.view">
        <field name="name">mail.activity.form.inherit.calendar</field>
        <field name="model">mail.activity</field>
        <field name="inherit_id" ref="mail.mail_activity_view_form_popup"/>
        <field name="arch" type="xml">
            <field name="summary" position="after">
                <field name="location_type" attrs="{'required': [('activity_type_id', '=', %(outplacement_order_interpreter.order_interpreter)d)], 'invisible': [('activity_type_id', '!=', %(outplacement_order_interpreter.order_interpreter)d)]}"/>
                <field name="phone" attrs="{'invisible': [('activity_type_id', '!=', %(outplacement_order_interpreter.order_interpreter)d)]}"/>
                <field name="time_start" attrs="{'required': [('activity_type_id', '=', %(outplacement_order_interpreter.order_interpreter)d)], 'invisible': [('activity_type_id', '!=', %(outplacement_order_interpreter.order_interpreter)d)]}"/>
                <field name="time_end" attrs="{'required': [('activity_type_id', '=', %(outplacement_order_interpreter.order_interpreter)d)], 'invisible': [('activity_type_id', '!=', %(outplacement_order_interpreter.order_interpreter)d)]}"/>
            </field>
            <field name="user_id" position="after">
                <field name="interpreter_gender_preference" attrs="{'required': [('activity_type_id', '=', %(outplacement_order_interpreter.order_interpreter)d)], 'invisible': [('activity_type_id', '!=', %(outplacement_order_interpreter.order_interpreter)d)]}"/>
                <field name="interpreter_language" attrs="{'required': [('activity_type_id', '=', %(outplacement_order_interpreter.order_interpreter)d)], 'invisible': [('activity_type_id', '!=', %(outplacement_order_interpreter.order_interpreter)d)]}"/>
                <label for="street" string="Address" attrs="{'invisible': [('activity_type_id', '!=', %(outplacement_order_interpreter.order_interpreter)d)]}"/>
                <div class="o_address_format" attrs="{'required': [('activity_type_id', '=', %(outplacement_order_interpreter.order_interpreter)d)], 'invisible': [('activity_type_id', '!=', %(outplacement_order_interpreter.order_interpreter)d)]}">
                    <field name="street" placeholder="Street..."
                           class="o_address_street"/>
                    <field name="city" placeholder="City" class="o_address_city"/>
                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                </div>
            </field>
        </field>
    </record>

</odoo>
