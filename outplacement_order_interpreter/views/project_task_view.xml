<odoo>
    <data>
        <record id="project_task_form_extended" model="ir.ui.view">
            <field name="name">project.task.form</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_search_form"/>
            <field name="arch" type="xml">
                <filter name="activities_my" position="after">
                    <separator/>
                    <filter string="Active Bookings" name="activities_active_booking"
                        domain="[('activity_ids.user_id', '=', uid), ('activity_ids.active', '=', True)]"/>
                    <filter string="Awaiting Response" name="activities_awaiting_booking"
                        domain="[('activity_ids.user_id', '=', uid), ('activity_ids.active', '=', True), ('activity_ids._interpreter_booking_status', '=', '1'), ('activity_ids._interpreter_booking_status_2', 'in', ['1', '3'])]"/>
                    <filter string="Failed Bookings" name="activities_failed_booking"
                        domain="[('activity_ids.user_id', '=', uid), ('activity_ids.active', '=', True), ('activity_ids._interpreter_booking_status', '=', '1'), ('activity_ids._interpreter_booking_status_2', '=', '2')]"/>
                    <filter string="Done Bookings" name="activities_done_booking"
                        domain="[('activity_ids.user_id', '=', uid), ('activity_ids.active', '=', False)]"/>
                </filter>
            </field>
        </record>
    </data>
</odoo>
