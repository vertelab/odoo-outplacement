<odoo>
    <data>
        <record id="project_task_form_extended" model="ir.ui.view">
            <field name="name">project.task.form</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_search_form"/>
            <field name="arch" type="xml">
                <filter name="activities_my" position="after">
                    <separator/>
                    <filter string="Order received" name="activities_order_received"
                            domain="[('activity_ids.user_id', '=', uid), ('outplacement_id', '!=', False),
                            ('activity_ids._interpreter_booking_status_2', '=', '1'),
                            '|', ('activity_ids.active', '=', True), ('activity_ids.active', '=', False)]"/>
                    <filter string="No available interpreter" name="activities_no_available_interpreter"
                            domain="[('activity_ids.user_id', '=', uid),  ('outplacement_id', '!=', False),
                         ('activity_ids._interpreter_booking_status_2', '=', '2'),
                         '|', ('activity_ids.active', '=', True), ('activity_ids.active', '=', False)]"/>
                    <filter string="Order in Process" name="activities_order_in_process"
                             domain="[('activity_ids.user_id', '=', uid), ('outplacement_id', '!=', False),
                         ('activity_ids._interpreter_booking_status_2', '=', '3'),
                         '|', ('activity_ids.active', '=', True), ('activity_ids.active', '=', False)]"/>
                    <filter string="Interpreter Booked" name="activities_interpreter_booked"
                               domain="[('activity_ids.user_id', '=', uid), ('outplacement_id', '!=', False),
                         ('activity_ids._interpreter_booking_status_2', '=', '4'),
                         '|', ('activity_ids.active', '=', True), ('activity_ids.active', '=', False)]"/>
                    <filter string="Cancelled by Interpreter" name="activities_cancelled_by_interpreter"
                            domain="[('activity_ids.user_id', '=', uid), ('outplacement_id', '!=', False),
                         ('activity_ids._interpreter_booking_status_2', '=', '5'),
                         '|', ('activity_ids.active', '=', True), ('activity_ids.active', '=', False)]"/>
                    <filter string="Cancelled by AF" name="activities_cancelled_by_af"
                            domain="[('activity_ids.user_id', '=', uid), ('outplacement_id', '!=', False),
                         ('activity_ids._interpreter_booking_status_2', '=', '6'),
                         '|', ('activity_ids.active', '=', True), ('activity_ids.active', '=', False)]"/>
                </filter>
            </field>
        </record>
    </data>
</odoo>
