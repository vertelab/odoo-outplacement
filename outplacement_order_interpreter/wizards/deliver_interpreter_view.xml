<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="deliver_interpreter" model="ir.ui.view">
        <field name="name">interpreter_delivery.wizard</field>
        <field name="model">outplacement.interpreter_delivery.wizard</field>
        <field name="arch" type="xml">

            <form>
                <field name="delivered" invisible="1"/>
                <span attrs="{'invisible': [('delivered', '=', False)]}">Already Delivered</span>
                <group attrs="{'invisible': [('delivered', '=', True)]}">
                    <field name="mail_activity_id" invisible="1"/>
                    <field name="booking_ref"/>
                    <field name="kanr"/>
                    <!-- Not used by tolkportalen yet.
                    <field name="follow_up_code"/>
                    <field name="office_code"/> -->
                    <field name="project_code" invisible="1"/>
                    <field name="absent_interpreter"/>
                    <field name="additional_time"/>
                </group>

                <footer>
                    <button name="deliver_interpreter"
                            string="Inleverera"
                            type="object" attrs="{'invisible': [('delivered', '=', True)]}"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="deliver_interpreter_action">
        <field name="name">Interpreter delivery</field>
        <field name="res_model">outplacement.interpreter_delivery.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
