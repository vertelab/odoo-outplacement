<odoo>
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">outplacement.view.form.inherit.education</field>
        <field name="model">outplacement</field> 
        <field name="inherit_id" ref="outplacement.outplacement_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="education" string="Education">
                    <group>
                        <group>
                            <field name="sun_ids" widget="many2many_tags"
                                   options="{'no_create_edit': True}" attrs="{'invisible': [('partner_id', '=', False)]}"/>
                            <field name="education_level" attrs="{'invisible': [('partner_id', '=', False)]}"/>
                            <field name="foreign_education" attrs="{'invisible': [('partner_id', '=', False)]}"/>
                            <field name="foreign_education_approved" attrs="{'invisible': [('partner_id', '=', False)]}"/>
                            <field name="cv_file_name" invisible="1" attrs="{'invisible': [('partner_id', '=', False)]}"/>
                            <field name="cv" filename="cv_file_name" attrs="{'invisible': [('partner_id', '=', False)]}"/>
                            <field name="references_file_name" invisible="1" attrs="{'invisible': [('partner_id', '=', False)]}"/>
                            <field name="references" filename="cv_file_name" attrs="{'invisible': [('partner_id', '=', False)]}"/>
                        </group>
                        <group>
                            <field name="drivers_license_ids"
                                   widget="many2many_tags"
                                   options="{'no_create_edit': True}" attrs="{'invisible': [('partner_id', '=', False)]}"/>
                            <field name="has_car" attrs="{'invisible': [('partner_id', '=', False)]}"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>