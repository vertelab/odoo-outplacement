<odoo>
    <data>
        <record id="res_joint_planning_form_view" model="ir.ui.view">
            <field name="name">res_joint_planning</field>
            <field name="model">res.joint_planning</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" required="True"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="task_type"/>
                                <field name="send2server"/>
                            </group>
                            <group>
                                <field name="activity_id"/>
                                <field name="color"/>
                                <field name="planned_hours"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="res_joint_planning_tree_view" model="ir.ui.view">
            <field name="name">res_joint_planning</field>
            <field name="model">res.joint_planning</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="task_type"/>
                    <field name="activity_id"/>
                </tree>
            </field>
        </record>


        <record id="res_joint_planning_action" model="ir.actions.act_window">
            <field name="name">res_joint_planning</field>
            <field name="res_model">res.joint_planning</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
                id="menu_res_joint_planning"
                parent="outplacement.outplacement_configuration"
                action="res_joint_planning_action"
                name="Joint Planning"
                groups="base.group_user"
                sequence="5"/>

    </data>
</odoo>
