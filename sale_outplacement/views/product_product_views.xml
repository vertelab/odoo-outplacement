<?xml version="1.0"?>
<odoo>
    <record id="product_template_only_form_view" model="ir.ui.view">
        <field name="name">product.product.sale_outplacement</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <div name="options" position="inside">
                <div>
                    <field name="is_suborder"/>
                    <label for="is_suborder"/>
                </div>
            </div>
            <notebook position="inside">
                <page string="Suborder" name="suborder" attrs="{'invisible': [('is_suborder','=',False)]}">
                    <field name="mail_activity_ids"/>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
