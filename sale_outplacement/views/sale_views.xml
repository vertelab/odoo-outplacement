<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_order_form">
        <field name="name">sale.order.line.outplacement</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Hide send by email button -->
            <button name="action_quotation_send" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>
            <field name="partner_id" position="after">
                <field name="outplacement_id" />
            </field>
            <xpath expr="//field[@name='order_line']/form//field[@name='product_uom_qty']" position="after">
                <field name="forvantatantal" />
            </xpath>
        </field>
    </record>

    <record id="sale_view_quotation_tree_inherited" model="ir.ui.view">
        <field name="name">sale.order.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <field name="message_needaction" position="after">
                <field name="origin"/>
            </field>
            <field name="user_id" position="replace">
            </field>
        </field>
    </record>

    <!-- Remove default filter on my orders from order tree view -->
    <record id="sale.action_quotations_with_onboarding" model="ir.actions.act_window">
        <field name="context"></field>
    </record>


    <!-- Override this menu to hide for dafa accounting read user, so only authorised with new group access these menus.-->
    <menuitem id="sale.menu_sale_quotations"
                action="sale.action_quotations_with_onboarding"
                parent="sale.sale_order_menu"
                sequence="1" groups="-sales_team.group_sale_salesman,sale_outplacement.group_disable_dafa_hide"/>

    <menuitem id="sale.res_partner_menu"
            parent="sale.sale_order_menu"
            action="base.action_partner_form"
            sequence="4" groups="-sales_team.group_sale_salesman,sale_outplacement.group_disable_dafa_hide"/>


    <menuitem id="sale.report_sales_team"
            name="Sales Teams"
            parent="sale.sale_order_menu"
            groups="-sales_team.group_sale_manager,sale_outplacement.group_disable_dafa_hide"
            action="sales_team.crm_team_salesteams_act"
            sequence="3"/>

    <menuitem id="sale.menu_sale_order"
            name="Orders"
            action="sale.action_orders"
            parent="sale.sale_order_menu"
            sequence="2" groups="sales_team.group_sale_salesman,base_user_groups_dafa.group_dafa_admin_accounting_read"/>

     <menuitem name="Invoicing"
            id="account.menu_finance"
            groups="account.group_account_user,account.group_account_manager,account.group_account_invoice,base_user_groups_dafa.group_dafa_admin_accounting_read"
            web_icon="account,static/description/icon.png"
            sequence="40"/>

</odoo>
